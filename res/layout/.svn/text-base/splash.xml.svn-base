<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/splash">

	<ProgressBar android:layout_width="fill_parent"
		android:layout_marginTop="380px" android:layout_height="wrap_content"
		style="@android:style/Widget.ProgressBar.Horizontal"
		android:indeterminate="true" android:layout_marginLeft="60px"
		android:layout_marginRight="60px" />

	<TextView android:layout_width="wrap_content" android:layout_marginTop="10px"
		android:layout_height="wrap_content" android:text="Initializing data..."
		android:layout_gravity="center_horizontal"
		android:textColor="#fff" />
		
</LinearLayout>