<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="120px" android:layout_height="120px"
	android:orientation="vertical" android:padding="10px">

	<ImageView android:id="@+id/topicIcon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:layout_marginBottom="5px" android:padding="2px"
		android:background="#fff" />

	<TextView android:id="@+id/topicName" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:textColor="#ADFF2F" android:ellipsize="marquee"/>

</LinearLayout> 